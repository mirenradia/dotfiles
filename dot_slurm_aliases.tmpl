alias si='sinfo -o "%10P %.5a %.10l %.6D %15C %.6t %N"'
alias sqf="squeue -o \"%.9i %.12j %.8u %.12a %.2t %.5Q %.10M %.10l %.5C %R\""
{{- end }}
