# simple ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias lt='ll -t'

# exa aliases
alias el='exa -alF'

# Make less display colours from ANSI colour escape sequences
alias less='less -R'

# Alias xdg-open to open
alias open='xdg-open'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Alias for apt
alias apt-ilist='apt list --installed'

# Alias for xclip so that it just uses the normal clipboard
alias xclip="xclip -selection c"

# Alias for opening Teams meetings in Teams for Linux
alias teams-meeting='f() { xdg-open ${1//https:\/\/teams.microsoft.com/msteams:}; }; f'
